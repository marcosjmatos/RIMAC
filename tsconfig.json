{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "paths": {
      "@utils/*": ["./src/utils/*"]
    },
    "rootDir": "./",
    "esModuleInterop": true
  },
  "include": ["src/**/*", "e2e/*"],
	"exclude": ["node_modules"]
}
